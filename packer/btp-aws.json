{
  "description": "BTP Image Deployment for AWS",
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_region": "{{env `AWS_DEFAULT_REGION`}}",
    "aws_source_ami": "ami-c3b1c4f9",
    "aws_s3_bucket": "btp-images",
    "aws_cert_path": "",
    "aws_key_path": "",
    "aws_instance_type": "m1.large"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `aws_source_ami`}}",
      "ami_name": "BTP-{{isotime \"2006-01-02\"}}",
      "ami_description": "The BPA-CSIRO Bioinformatics Training Platform",
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "delete_on_termination": true
        }
      ],
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "delete_on_termination": true
        }
      ],
      "tags": {
        "OS_Version": "Ubuntu",
        "Release": "Latest"
      },
      "instance_type": "{{user `aws_instance_type`}}",
      "ssh_username": "ubuntu",
      "ssh_port": "22"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "provisioners/preflight.sh",
        "provisioners/dependencies.sh",
        "provisioners/tools.sh",
        "provisioners/postflight.sh"
      ],
      "pause_before": "10s",
      "override": {
        "amazon-ebs": {
          "execute_command": "sudo bash {{.Path}}"
        }
      }
    }
  ]
}
