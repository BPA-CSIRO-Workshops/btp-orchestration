{
  "description": "BTP Image Deployment for QEMU",
  "builders": [{
    "type": "openstack",
    "image_name": "BTP-{{isotime \"2006-01-02\"}}",
    "source_image": "c395c528-fb43-4066-9536-cf5c5efe806d",
    "flavor": "m1.small",
    "ssh_username": "ubuntu",
    "ssh_port": 22,
    "region":"Melbourne",
    "availability_zone": "monash-01"
  }],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "provisioners/preflight.sh",
        "provisioners/dependencies.sh",
        "provisioners/tools.sh",
        "provisioners/postflight.sh"
        ],
      "pause_before": "10s",
      "override": {
        "openstack": {
          "execute_command": "sudo bash {{.Path}}"
        }
      }
    }
  ]
}
